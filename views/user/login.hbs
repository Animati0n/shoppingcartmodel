<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-3">
            <h1 class="text-center">Login</h1>
            {{#if LoginError}}
            <h2>Invalid password and email </h2>
            {{/if}}
            <form action="/login" method="post">
                <div class="form-group m-2">
                    <label for="">Email</label>
                    <input type="email" name="Email" id="" class="form-control" placeholder="Enter Your Email">
                </div>
                <div class="form-group m-2">
                    <label for="">Password</label>
                    <input type="password" name="Password" id="" class="form-control" placeholder="Enter Your Password">
                </div>
                <a href="/signup" class="mt-2">Create new Account?</a>
                <button class="btn btn-primary float-end mt-2" type="submit">Login</button>
            </form>
        </div>
    </div>
</div>