<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit Product</h2>
                {{#with product}}
                <form action="/admin/edit-product/{{_id}}" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Name</label>
                        <input type="text" name="name" class="form-control" value="{{name}}">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Category</label>
                        <input type="text" name="category" class="form-control" value="{{category}}">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Price</label>
                        <input type="number" name="price" class="form-control" value="{{price}}">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Description</label>
                        <input type="text" name="description" class="form-control" value="{{description}}">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label mb-3">Image</label>
                        <img src="/images/{{_id}}.jpg" style="width:100px;height:auto" class="m-2" id="showImage">
                        <input type="file" class="form-control m-2" name="img" onchange="changeImg(event)">
                    </div>
                    <button type="submit" class="btn btn-success">Submit</button>
                </form>
                {{/with}}
            </div>
        </div>
    </div>
</section>
<script>
    function changeImg(event) {
        document.getElementById('showImage').src = URL.createObjectURL(event.target.files[0])
    }
</script>